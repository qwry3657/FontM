<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/rippleAccent">
    <item
        android:left="24dp"
        android:right="24dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0.0"
                android:endColor="@color/colorAccentVariant"
                android:startColor="@color/colorAccent" />
            <corners
                android:topLeftRadius="32dp"
                android:topRightRadius="32dp"
                android:bottomLeftRadius="@dimen/cont_corner_radius"
                android:bottomRightRadius="@dimen/cont_corner_radius" />
        </shape>
    </item>
    <item
        android:left="24dp"
        android:right="24dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/offStateColor3" />
            <corners
                android:topLeftRadius="32dp"
                android:topRightRadius="32dp"
                android:bottomLeftRadius="@dimen/cont_corner_radius"
                android:bottomRightRadius="@dimen/cont_corner_radius" />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:left="12dp"
        android:right="12dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0.0"
                android:endColor="@color/colorAccentVariant"
                android:startColor="@color/colorAccent" />
            <corners
                android:topLeftRadius="32dp"
                android:topRightRadius="32dp"
                android:bottomLeftRadius="@dimen/cont_corner_radius"
                android:bottomRightRadius="@dimen/cont_corner_radius" />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:left="12dp"
        android:right="12dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/offStateColor2" />
            <corners
                android:topLeftRadius="32dp"
                android:topRightRadius="32dp"
                android:bottomLeftRadius="@dimen/cont_corner_radius"
                android:bottomRightRadius="@dimen/cont_corner_radius" />
        </shape>
    </item>
    <item android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorContainer" />
            <corners android:radius="@dimen/cont_corner_radius" />
        </shape>
    </item>
    <item android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorContainerOverlay" />
            <corners android:radius="@dimen/cont_corner_radius" />
        </shape>
    </item>
</ripple>